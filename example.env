# LLM Provider Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, cohere, azure, nvidia

# OpenAI Configuration
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Cohere Configuration
COHERE_API_KEY=your_cohere_key
COHERE_MODEL=command  # Optional, defaults to command

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-key
AZURE_OPENAI_API_BASE=your-azure-endpoint
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# NVIDIA Configuration
NVIDIA_API_KEY=your_nvidia_key
NVIDIA_MODEL=microsoft/phi-3-small-128k-instruct  # Optional

# Vector Store Configuration
QDRANT_URL=your_qdrant_url  # Optional, uses local storage if not provided
QDRANT_API_KEY=your_qdrant_key  # Optional

# Security Configuration
SECURITY_SECRET_KEY=your-secret-key-here
SECURITY_ENCRYPTION_KEY=your-fernet-key-here
MONGODB_URL=mongodb://localhost:27017
REDIS_URL=redis://localhost:6379

# Audit Configuration
AUDIT_LOG_PATH=/path/to/audit/logs
COMPLIANCE_LOG_RETENTION_DAYS=365

JWT_SECRET_KEY=your-secure-secret-key
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017
SESSION_TIMEOUT=28800

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=100
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
METRICS_PORT=9090
LOG_PATH=/path/to/logs
ALERT_THRESHOLD=90
REDIS_URL=redis://localhost:6379

# Data Governance Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key
DOC_RETENTION_DAYS=365
AUDIT_RETENTION_DAYS=730
USER_DATA_RETENTION_DAYS=365

SENTINEL_HOSTS=sentinel1:26379,sentinel2:26379,sentinel3:26379
REDIS_CLUSTER_URL=redis://localhost:6379
MONGODB_REPLICA_SET=rs0
MONGODB_URL=mongodb://localhost:27017,localhost:27018,localhost:27019
FAILOVER_TIMEOUT=30